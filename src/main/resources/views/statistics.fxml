<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml" fx:controller="org.studentsphere.controllers.StatisticsController">
    <top>
        <Button text="Back to Dashboard" onAction="#goToDashboard"/>
    </top>
    <center>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
                <Label text="Statistics" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                <PieChart fx:id="coursePieChart" prefWidth="400" prefHeight="300" />
                <Label fx:id="totalStudentsLabel" style="-fx-font-size: 18px;" />
                <Label fx:id="totalCoursesLabel" style="-fx-font-size: 18px;" />
                <Label fx:id="popularCourseLabel" style="-fx-font-size: 18px;" />
        </VBox>
    </center>
</BorderPane>