<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml" fx:controller="org.studentsphere.controllers.AddStudentController">
    <center>
        <VBox spacing="10" alignment="CENTER">
            <TextField fx:id="firstNameField" promptText="First Name"/>
            <TextField fx:id="lastNameField" promptText="Last Name"/>
            <TextField fx:id="emailField" promptText="Email"/>
            <ComboBox fx:id="courseComboBox" promptText="Select Course"/>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Save" onAction="#saveStudent"/>
                <Button text="Cancel" onAction="#goToListStudents"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>