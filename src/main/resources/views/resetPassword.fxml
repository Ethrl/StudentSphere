<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml" fx:controller="org.studentsphere.controllers.ResetPasswordController" spacing="10" alignment="CENTER">
    <Label fx:id="adminLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    <PasswordField fx:id="newPasswordField" promptText="New Password"/>
    <HBox spacing="10">
        <Button text="Reset Password" onAction="#resetPassword"/>
        <Button text="Cancel" onAction="#goToManageAdmins"/>
    </HBox>
</VBox>