<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="org.studentsphere.controllers.EditStudentController">
    <center>
        <VBox spacing="10">
            <Label text="Edit Student" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <TextField fx:id="firstNameField" promptText="First Name" />
            <TextField fx:id="lastNameField" promptText="Last Name" />
            <TextField fx:id="emailField" promptText="Email" />
            <ComboBox fx:id="courseComboBox" promptText="Select Course" />
            <HBox spacing="10" alignment="CENTER">
                <Button text="Save Changes" onAction="#saveChanges" />
                <Button text="Cancel" onAction="#cancel" />
            </HBox>
        </VBox>
    </center>
</BorderPane>