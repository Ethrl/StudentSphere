<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml" fx:controller="org.studentsphere.controllers.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Login to StudentSphere" />
            <TextField fx:id="usernameField" promptText="Username" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <Button text="Login" onAction="#loginUser" />
            <Button text="Back" onAction="#goBackToMain" />
        </VBox>
    </center>
</BorderPane>