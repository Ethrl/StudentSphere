<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml" fx:controller="org.studentsphere.controllers.AddCourseController" spacing="10" alignment="CENTER">
    <TextField fx:id="courseNameField" promptText="Course Name"/>
    <TextField fx:id="courseDescriptionField" promptText="Course Description"/>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Add" onAction="#addCourse"/>
        <Button text="Cancel" onAction="#goBackToCourses"/>
    </HBox>
</VBox>