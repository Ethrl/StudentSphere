<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml" fx:controller="org.studentsphere.controllers.RegisterController">
    <center>
        <VBox spacing="10" alignment="CENTER">
            <TextField fx:id="usernameField" promptText="Username"/>
            <TextField fx:id="emailField" promptText="Email"/>
            <PasswordField fx:id="passwordField" promptText="Password"/>
            <Button text="Register" onAction="#registerUser"/>
            <Button text="Back" onAction="#goBackToMain"/>
        </VBox>
    </center>
</BorderPane>